p.notice = notice

h1 = "#{@dog_size.size} breeds"

= link_to "Back", dog_sizes_path, class: "btn"
= link_to "New breed", new_dog_size_breed_path(@dog_size), class: "btn"

table
  tr
    td
      - if @dog_size.image.attached?
        = image_tag url_for(@dog_size.image.variant(resize_to_limit: [300, 300]))
    td
      p
        strong Size:
        = @dog_size.size

      p
        strong Description:
        = @dog_size.description

      div
        .actions
          = link_to "Edit", edit_dog_size_path(@dog_size), class: "btn"
          = button_to "Delete", @dog_size, method: :delete, class: "btn", data: { confirm: 'Are you sure you want to delete this dog size?' }

table
  thead
    tr
      th Name
      th Actions
  tbody
    - @breeds.each do |breed|
      tr
        td = link_to breed.name, breed, class: "breed_name"
        td
          .actions
            = link_to "Edit", edit_breed_path(breed), class: "btn"
            = button_to "Delete", breed, method: :delete, class: "btn", data: { confirm: 'Are you sure you want to delete this breed?' }
